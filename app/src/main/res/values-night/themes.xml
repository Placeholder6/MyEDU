<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyEDU" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Splash Screen Theme (Dark Mode) -->
    <!-- We keep the blue background for brand consistency, but handle dark mode transitions -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.MyEDU</item>
    </style>
</resources>