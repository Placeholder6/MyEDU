<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyEDU" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Background fills the window -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>
        
        <!-- The vector drawable that will be animated/displayed -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        
        <!-- Icon background is usually not needed for a full-bleed vector, but good for safety -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Theme to switch to after splash -->
        <item name="postSplashScreenTheme">@style/Theme.MyEDU</item>
    </style>
</resources>